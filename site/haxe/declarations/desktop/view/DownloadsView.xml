<?xml version="1.0" encoding="UTF-8"?>
<JPanel xmlns="org.aswing"
        xmlns:haxe="http://haxe.org/"
        xmlns:geom="org.aswing.geom"
        xmlns:ext="org.aswing.ext"
        xmlns:view="demo.view"
        xmlns:jive="jive"
        xmlns:border="org.aswing.border"
        xmlns:e="empty"
        >
    <layout>
        <BorderLayout hgap="30" vgap="30"/>
    </layout>

    <SoftBox constraints="org.aswing.BorderLayout.CENTER">
        <JLabel text="'Download'" horizontalAlignment="org.aswing.AsWingConstants.LEFT" constraints="org.aswing.BorderLayout.NORTH">
            <font>
                <ASFont name="'assets/Lato-Bold.ttf'" size="30"/>
            </font>
            <border>
                <border:EmptyBorder bottom="30"/>
            </border>
        </JLabel>

        <JPanel>
            <JLabel text="'From haxelib:'">
                <font>
                    <ASFont name="'assets/Lato-Bold.ttf'" size="16"/>
                </font>
            </JLabel>
            <JLabel text="'haxelib install jive'" selectable="true"/>
        </JPanel>

        <JPanel>
            <JLabel text="'Development version from GitHub:'" selectable="false">
                <font>
                    <ASFont name="'assets/Lato-Bold.ttf'" size="16"/>
                </font>
            </JLabel>
            <JLabel text="'haxelib git jive https://github.com/ngrebenshikov/jive'" selectable="true"/>
        </JPanel>

        <JPanel>
            <JLabel text="'Download manually from GitHub:'">
                <font>
                    <ASFont name="'assets/Lato-Bold.ttf'" size="16"/>
                </font>
            </JLabel>
            <JLabelButton text="'Download the archive'">
                <command>
                    <jive:OpenLinkCommand url="'https://github.com/ngrebenshikov/jive/archive/master.zip'"/>
                </command>
            </JLabelButton>
            <JLabel text="', extract files and use [haxelib dev] command.'"/>
        </JPanel>

        <JPanel>
            <JLabel text="'Dependencies:'">
                <font>
                    <ASFont name="'assets/Lato-Bold.ttf'" size="16"/>
                </font>
            </JLabel>
            <JLabel text="'haxelib git hml https://github.com/profelis/hml'" selectable="true"/>
        </JPanel>


    </SoftBox>
</JPanel>